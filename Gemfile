source 'https://rubygems.org'

ruby '2.3.1'

# adding no version after the name of the gem will always update the latest release
# ~> will update to all minor and patch versions
gem 'pry', '~> 0.10.4'
# removing ~> : this way will always leave it with version 2.0.0
gem 'babbler', '2.0.0'

#gem install bundler --> type into terminal for each repository

#bundle update in terminal will look for newest version and will install it
